---
interface Props {
  id: string
  tab?: string
  height?: number
  caption?: string
}

const { id, height = 600, tab = 'html,result' } = Astro.props
const penHeight = `${height}px`
---

<div class='codepen-wrapper media-item'>
  <p
    class='codepen'
    data-height={penHeight}
    data-theme-id='48919'
    data-default-tab={tab}
    data-slug-hash={id}
    data-preview='true'
    data-editable='true'
    data-user='macx'
  >
    <span>
      Ã–ffne den <a href={`https://codepen.io/macx/pen/${id}`}>Codepen</a>.
    </span>
  </p>

  <script
    async
    src='https://cpwebassets.codepen.io/assets/embed/ei.js'
    is:inline></script>
</div>

<style define:vars={{ 'pen-height': penHeight }}>
  .codepen-wrapper {
    height: calc(var(--pen-height) + (var(--sp) * 2));
  }
</style>
