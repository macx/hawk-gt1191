---
import type { ImageMetadata } from 'astro'
import { render } from 'astro:content'
import { Image } from 'astro:assets'
import { formatTitle, widont } from '@plugins/remark-widont.mjs'
import FormattedDate from './FormattedDate.astro'

const { article, card } = Astro.props
const isContentArticle = Boolean(article)
const title = card?.title ?? article?.data?.title
const description = card?.description ?? article?.data?.description
const href = card?.href ?? (article ? `/tutorials/${article.id}` : '#')
const coverPath = card?.imagePath ?? article?.data?.cover?.path
const coverAlt = card?.imageAlt ?? article?.data?.cover?.alt ?? coverPath
const coverImage = article?.data?.cover?.image
const isDraft = article?.data?.isDraft
const safeTitle = title ?? ''
const safeDescription = description ?? ''
const safeAlt = coverAlt ?? safeTitle

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/images/**/*.{jpeg,jpg,png}'
)
let readingTime: { minutes: number; words: number } | undefined
let pubDate: Date | undefined

if (isContentArticle) {
  const { remarkPluginFrontmatter } = await render(article)
  const minutesToRead = remarkPluginFrontmatter.minutesToRead
  readingTime = {
    minutes: Number(minutesToRead.minutes.toFixed(0)),
    words: minutesToRead.words
  }
  pubDate = article.data.pubDate
}

const hasMeta = Boolean(pubDate && readingTime)

if (coverPath && !images[coverPath] && !coverImage) {
  throw new Error(
    `Das Bild "${coverPath}" existiert im angegeben Verzeichnis nicht.`
  )
}
---

<article
  class:list={[
    'article-card',
    'media-item-article',
    { draft: isDraft, 'has-meta': hasMeta }
  ]}
  data-article-id={article?.id}
>
  {isDraft && <div class='draft-banner' />}

  <a href={href}>
    <header>
      <h3 class='title'>
        <Fragment set:html={formatTitle(safeTitle)} />
      </h3>

      {
        pubDate && readingTime && (
          <FormattedDate date={pubDate} readingTime={readingTime.minutes} />
        )
      }
    </header>

    <div class='image'>
      {
        coverImage ? (
          <Image
            src={coverImage}
            widths={[380, 670, 710]}
            sizes={`(max-width: 480px) 380px, (max-width: 800) 670px, 710px`}
            alt={safeAlt}
          />
        ) : (
          coverPath && (
            <Image
              src={images[coverPath]()}
              widths={[380, 670, 710]}
              sizes={`(max-width: 480px) 380px, (max-width: 800) 670px, 710px`}
              alt={safeAlt}
            />
          )
        )
      }
    </div>

    <div class='description'>
      <p>{widont(safeDescription)}</p>

      <span class='more'>Weiterlesen</span>
    </div>
  </a>
</article>

<style>
  .article-card {
    margin-block: 0;
    position: relative;
    transition: box-shadow var(--transition);
    container: article-card / inline-size;

    &:hover,
    &.focus {
      box-shadow: 0 0.53em 1em -0.5rem rgba(0, 0, 0, 0.2);
    }

    a {
      display: flex;
      flex-direction: column;
      color: var(--clr-text);
      text-decoration: none;
      min-height: 100%;

      &:hover,
      &:focus {
        color: currentColor;
        text-decoration: none;

        .title,
        .more {
          color: var(--clr-primary);
        }

        .more {
          display: inline-flex;
          align-items: center;
        }

        .more::after {
          transform: translate(0, -0.1em);
          scale: 2;
          opacity: 1;
        }

        .image img {
          scale: 1.1;
        }
      }
    }

    header {
      padding: var(--sp);
      grid-area: header;
    }

    .title {
      font-size: 1.3rem;
      font-family: var(--ff);
      margin-block: 0 0.5em;
      transition: all var(--transition);
    }

    .image {
      overflow: hidden;

      img {
        grid-area: image;
        scale: 1;
        transition: var(--transition);
      }
    }

    .description {
      font-size: var(--fs-s);
      padding: var(--sp);
      grid-area: description;
      flex: 1;
    }

    .more {
      display: inline-flex;
      align-items: center;
      transition: all var(--transition);

      &::after {
        content: 'Â»';
        margin-inline-start: 1ch;
        transform: translateX(-5ch);
        transition: all var(--transition);
        opacity: 0;
      }
    }

    &:not(.has-meta) {
      header {
        padding-block-end: 0;
      }

      .title {
        margin-block-end: 0;
      }
    }

    &.has-meta {
      .title {
        min-height: 2lh;
      }
    }

    @container article-card (width < 20em) {
      &.has-meta {
        .title {
          min-height: 3lh;
        }
      }
    }

    @container timeline (width > 32em) {
      > a {
        display: grid;
        grid-template-areas:
          'image header'
          'image description';
        grid-template-columns: 30cqi auto;
        grid-template-rows: auto 1fr;
        column-gap: var(--sp-m);
        row-gap: var(--sp);
        padding: var(--sp);

        header {
          grid-area: header;
          padding: 0;
        }

        .title,
        .description {
          grid-area: description;
          padding: 0;
        }

        .image {
          grid-area: image;
        }
      }
    }

    @container aside (width < 25em) {
      &:first-child {
        border-block-end-width: 0;
        border-end-end-radius: 0;
        border-end-start-radius: 0;
      }

      &:not(:last-child):not(:first-child) {
        border-radius: 0;
      }

      &:last-child {
        border-block-start-width: 0;
        border-start-start-radius: 0;
        border-start-end-radius: 0;
      }

      header {
        order: 2;
      }

      .title {
        font-size: 1rem;
        min-height: unset;
      }

      .image {
        order: 1;
      }

      .description {
        display: none;
        padding-block-start: 0;
      }
    }
  }

  .draft-banner {
    position: absolute;
    inset-block-start: -0.2em;
    inset-inline-end: 0.5em;
    z-index: 2;
    pointer-events: none;

    background-color: var(--clr-warning);
    color: var(--clr-inverse);
    box-shadow: 0 0.2em 0.3em -0.2em rgb(0 0 0 / 0.6);

    &::after {
      display: block;
      text-align: center;
      padding-block: 0.4em;
      padding-inline: 1.7ch;
      line-height: 1;

      font-size: var(--fs-xs);
      font-weight: var(--fw-bold);

      content: 'Entwurf';
    }
  }
</style>
